package com.project;

import com.project.entity.Product;
import com.project.repo.ProductRepo;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;

@Component
public class DataLoader implements CommandLineRunner {

    private final ProductRepo productRepository;

    public DataLoader(ProductRepo productRepository) {
        this.productRepository = productRepository;
    }

    @Override
    public void run(String... args) throws Exception {
        Product p1 = new Product();
        p1.setName("Royal Embroidered Wedding Suit");
        p1.setCategory("Wedding Suits");
        p1.setPrice(28500.0);
        p1.setImage("/images/wedding1.jpg");

        Product p2 = new Product();
        p2.setName("Luxury White Wedding Suit");
        p2.setCategory("Wedding Suits");
        p2.setPrice(32000.0);
        p2.setImage("/images/wedding2.jpg");

        Product p3 = new Product();
        p3.setName("Golden Sherwani Style Suit");
        p3.setCategory("Wedding Suits");
        p3.setPrice(35000.0);
        p3.setImage("/images/wedding3.jpg");

        productRepository.save(p1);
        productRepository.save(p2);
        productRepository.save(p3);
    }
}
